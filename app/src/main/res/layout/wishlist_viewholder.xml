<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="8dp"

    android:background="@drawable/notification_background">

    <View
        android:id="@+id/view22"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/populer_viewholder_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView52"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/img_18"
        app:layout_constraintBottom_toBottomOf="@+id/view22"
        app:layout_constraintEnd_toEndOf="@+id/view22"
        app:layout_constraintStart_toStartOf="@+id/view22"
        app:layout_constraintTop_toTopOf="@+id/view22" />

    <TextView
        android:id="@+id/scoretextwl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="51"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/wlrating"
        app:layout_constraintStart_toEndOf="@+id/wlrating"
        app:layout_constraintTop_toTopOf="@+id/wlrating" />

    <TextView
        android:id="@+id/ratingTextwl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.6"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView162"
        app:layout_constraintTop_toBottomOf="@+id/textView162" />

    <TextView
        android:id="@+id/wlrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:layout_marginLeft="10dp"

        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ratingTextwl"
        app:layout_constraintStart_toEndOf="@+id/ratingTextwl"
        app:layout_constraintTop_toTopOf="@+id/ratingTextwl" />

    <TextView
        android:id="@+id/wlscoretext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:layout_marginLeft="10dp"

        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/scoretextwl"
        app:layout_constraintTop_toTopOf="@+id/ratingTextwl" />


    <TextView
        android:id="@+id/textView162"
        style="@style/textStyle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Title"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/view22"
        app:layout_constraintTop_toTopOf="@+id/view22" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/img_70"
        android:layout_marginRight="20dp"
        android:id="@+id/deleteWl"

        app:layout_constraintBottom_toBottomOf="@+id/textView162"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView162" />

    <TextView
        android:id="@+id/textView192"
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:text="$ 0"
        android:textColor="#FF1717"
        app:layout_constraintBottom_toBottomOf="@+id/view22"
        app:layout_constraintStart_toEndOf="@+id/view22" />

    <TextView
        android:id="@+id/discountTag2"
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text=" % off"
        android:layout_marginLeft="5dp"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/view22"
        app:layout_constraintStart_toEndOf="@+id/discountTag1"
        app:layout_constraintTop_toTopOf="@+id/textView192" />
    <TextView
        android:id="@+id/discountTag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="5"
        android:layout_marginLeft="20dp"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/view22"
        app:layout_constraintStart_toEndOf="@+id/textView192"
        app:layout_constraintTop_toTopOf="@+id/textView192" />

    <TextView
        android:id="@+id/striketextprice"
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/strike_line"
        android:text="$ 0"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView192"

        app:layout_constraintStart_toEndOf="@+id/view22"
        app:layout_constraintTop_toBottomOf="@+id/ratingTextwl" />

</androidx.constraintlayout.widget.ConstraintLayout>